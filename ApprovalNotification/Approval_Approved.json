{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "PROCESO DE APROBACIÓN"
        },
        {
            "type": "TextBlock",
            "text": "Asunto: {subject}",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "wrap": true,
            "text": "Fecha:  {date}"
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Estado de la aprobación: ",
                            "wrap": true
                        }
                    ]
                },
                {
                    "type": "Column",
                    "width": "stretch",
                    "items": [
                        {
                            "type": "TextBlock",
                            "text": "Aprobado",
                            "wrap": true,
                            "color": "Good"
                        }
                    ]
                }
            ]
        },
        {
            "type": "ActionSet",
            "actions": [
                {
                    "type": "Action.OpenUrl",
                    "title": "Link a los documentos",
                      "url":"https://www.poweruser365.com/"
                }
            ]
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.3"
}